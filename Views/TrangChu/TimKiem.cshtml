@using ShopMyPham.Models
@model List<NuocHoa>
@{
    ViewBag.Title = "TimKiem";
    Layout = "~/Views/_LayoutTrangChu.cshtml";
}
<link href="~/Content/Css/CustomCss1.css" rel="stylesheet" />
<link href="~/css/sanpham.css" rel="stylesheet" />
@if (Model.Count > 0)
{
    <h2>Số sản phẩm tìm được khớp với từ khóa @Session["nametimkiem"] là: @Model.Count</h2>
    <form action="" method="post">
        <div class="box-content">
            <div class="box-product">
               
                @foreach (var item in Model)
                {                  
                        <div>
                            <a href="/ViewNuocHoa/ChiTietNuocHoa?MaNuocHoa=@item.MaNuocHoa">
                                <div class="Images"><img src="~/Content/Images/product/@item.AnhBia" alt="@item.Keywords" /></div>
                                <div class="Name">@item.TenNuocHoa</div>
                                <div class="price">@string.Format("{0:0,0}", item.GiaBan) VND</div>
                            </a>
                            <div class="btn-cart">
                                <input type="button" value="Thêm Vào Giỏ Hàng" onclick="DatHang(@item.MaNuocHoa)" />
                            </div>
                        </div>
                }

            </div>
        </div>
        
      


    </form>
}
else
{

    <h3 style="text-align:center">Không tìm thấy sản phẩm vào phù hợp với từ khóa @Session["nametimkiem"] !</h3>
}
